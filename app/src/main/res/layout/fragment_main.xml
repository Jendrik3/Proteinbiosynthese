<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/activity_margin">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/dnaTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DNA" />

		<EditText
			android:id="@+id/dnaET"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:editable="false"
			android:inputType="textCapCharacters|textMultiLine|textNoSuggestions"
			android:textIsSelectable="true" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/mrnaTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="mRNA" />

		<EditText
			android:id="@+id/mrnaET"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:digits=""
			android:editable="false"
			android:inputType="none"
			android:textIsSelectable="true" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tripletsTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Triplets" />

		<EditText
			android:id="@+id/tripletsET"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:digits=""
			android:editable="false"
			android:inputType="none"
			android:textIsSelectable="true" />

	</LinearLayout>

	<View
		android:layout_width="10dp"
		android:layout_height="match_parent"
		android:layout_weight="1" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_a"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="A"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:textStyle="bold" />

		<Button
			android:id="@+id/btn_t"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="T"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:textStyle="bold" />

		<Button
			android:id="@+id/btn_c"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="C"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:textStyle="bold" />

		<Button
			android:id="@+id/btn_g"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="G"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:textStyle="bold" />

		<ImageButton
			android:id="@+id/btn_back"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/ic_action_backspace" />

	</LinearLayout>
</LinearLayout>


